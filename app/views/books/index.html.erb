<h1>Books</h1>

<table>
  <thead>
    
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    
  </thead>

  <tbody>
      <% @books.each do |book| %>
      <tr>
        <td>
          <p><%= book.title %> </p>
        </td>
        <td>
          <p><%= book.body %></p>
        </td>
        <td> 
          <p><%= link_to "Show", book_path(book.id) %></p>
        </td>
        <td>
          <p><%= link_to "Edit", edit_book_path(book.id) %></p>
        </td>
        <td>
          <p><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure ?" %></p>
        </td>
      </tr>
      <% end %>
  </tbody>

  
<table>
<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div>
    <p>Title</p>
    <%= f.text_field :title %>
  </div>

  <div>
    <p>Body</p>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
</table>